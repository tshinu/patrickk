<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heven.taxicabondemandtaxi.fragment.driver.FragmentDashboard"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_refresh">

        <LinearLayout
            android:id="@+id/layout_liste"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_sales"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginBottom="0dp"
                            android:textSize="25dp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/dash_sales_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/dash_sales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TODAY SALES" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/layout_today_earning"
                    android:gravity="center"
                    android:background="@color/colorLogoBlack"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginBottom="0dp"
                            android:textSize="25dp"
                            android:textColor="@color/white"
                            android:id="@+id/dash_today_earning_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:id="@+id/dash_today_earning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TODAY EARNING" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_new"
                    android:gravity="center"
                    android:background="@color/colorLogoBlack"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:gravity="center"
                        android:background="@color/colorLogoBlack"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginBottom="0dp"
                            android:textSize="50dp"
                            android:textColor="@color/white"
                            android:id="@+id/dash_new_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:id="@+id/dash_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEW" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/layout_confirmed"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginBottom="0dp"
                            android:textSize="50dp"
                            android:textColor="@color/colorLogoBlack"
                            android:id="@+id/dash_confirmed_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/colorLogoBlack"
                            android:id="@+id/dash_confirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONFIRMED" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginRight="5dp"
                    android:id="@+id/layout_onride"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginBottom="0dp"
                            android:textSize="50dp"
                            android:textColor="@color/colorLogoBlack"
                            android:id="@+id/dash_onride_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/colorLogoBlack"
                            android:id="@+id/dash_onride"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ON RIDE" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/layout_completed"
                    android:gravity="center"
                    android:background="@color/colorLogoBlack"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginBottom="0dp"
                            android:textSize="50dp"
                            android:textColor="@color/white"
                            android:id="@+id/dash_completed_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:id="@+id/dash_completed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMPLETED" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_not_found"
            android:visibility="gone"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:tint="@color/colorYellowDark"
                android:layout_gravity="center"
                android:padding="30dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ic_distance" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_ride_completed_at_the_moment"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_failed"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/failed" />

            <ProgressBar
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/progressBar_failed"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oops"
                    android:textColor="@android:color/black"
                    android:textSize="25dp" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/make_sure_you_connect_to_the_internet_and_tap_cloud"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>