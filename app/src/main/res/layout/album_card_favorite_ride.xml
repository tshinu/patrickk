<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/relative_layout">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/linear">

            <TextView
                android:textColor="@color/colorLogoBlack"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:text="Job"
                android:id="@+id/fav_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:paddingRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="0dp"
                    android:visibility="visible"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:tint="@color/colorLogoBlack"
                        android:padding="0dp"
                        card_view:srcCompat="@drawable/ic_navigator"
                        android:gravity="right"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>

                    <TextView
                        android:textColor="@color/colorLogoBlack"
                        android:layout_marginLeft="5dp"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:text="Tampouy"
                        android:id="@+id/depart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="-5dp"
                    android:layout_marginTop="0dp"
                    android:visibility="visible"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:tint="@color/colorYellowDark"
                        android:padding="0dp"
                        card_view:srcCompat="@drawable/ic_menu"
                        android:gravity="right"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:padding="0dp"
                        card_view:srcCompat="@drawable/ic_navigator"
                        android:gravity="right"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>

                    <TextView
                        android:id="@+id/destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="Saaba"
                        android:textColor="@color/colorLogoBlack"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_down"
                android:paddingRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center|right|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:visibility="visible"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:visibility="visible"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:tint="@color/colorYellowDark"
                                card_view:srcCompat="@drawable/ic_distance"
                                android:layout_width="18dp"
                                android:layout_height="18dp"/>

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:textSize="16sp"
                                android:singleLine="true"
                                android:text="5 km"
                                android:gravity="right|center"
                                android:id="@+id/distance_ride"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="visible"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:tint="@color/colorYellowDark"
                                card_view:srcCompat="@drawable/ic_calendar"
                                android:layout_width="18dp"
                                android:layout_height="18dp"/>

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:textSize="16sp"
                                android:gravity="center|left"
                                android:id="@+id/date_ride"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="25 Sep. 2019"
                                android:textStyle="normal"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/custom_button_second"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/delete" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:visibility="visible"
            android:id="@+id/line_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/linear"
            android:background="#e2e2e2"/>
    </RelativeLayout>
</RelativeLayout>